{
  "id": "dot-config",
  "version": "4.0.0-alpha1",
  "name": ".config/",
  "description": "Synchronize configuration files from .config/ to devcontainer workspaces.",
  "keywords": ["dot", "config"],
  "options": {
    "workspaces": {
      "type": "string",
      "description": "Parent directory of workspaceFolder",
      "default": "/workspaces"
    }
  },
  "installsAfter": ["ghcr.io/devcontainers/features/node"],
  "onCreateCommand": "dot-config sync || true",
  "postStartCommand": "dot-config watch --detach",
  "mounts": [
    {
      "type": "volume",
      "source": "dot-config-cache-${devcontainerId}",
      "target": "/var/cache/devcontainer-config/dot-config"
    }
  ]
}
